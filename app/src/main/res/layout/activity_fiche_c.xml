<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.github.compto_bouffe.FicheC">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </LinearLayout>

    <RelativeLayout
        tools:context="com.example.sr.fiche_b.MainActivity2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:id="@+id/linearLayout9"
            android:padding="10dp"
            android:weightSum="4"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/linearLayout5">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MODIFIER MA LISTE"
                android:id="@+id/modify"
                android:layout_alignParentTop="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AJOUTER UN PLAT"
                android:id="@+id/add_plat"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

        </RelativeLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="167dp"
            android:id="@+id/list_nutri"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="33dp"
            android:layout_toEndOf="@+id/linearLayout5"
            android:layout_above="@+id/linearLayout9" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout5"
            android:minWidth="120dp"
            android:layout_alignBottom="@+id/linearLayout9"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/list_nutri">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Calories ingérées:"
                android:id="@+id/textView4"
                android:layout_marginTop="15dp"
                android:maxLines="1" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/textViewCalIng"
                android:textStyle="bold"
                android:textSize="30sp"
                android:maxLines="1"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Calories restantes:"
                android:id="@+id/textView5"
                android:maxLines="1"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:textStyle="bold"
                android:textSize="30sp"
                android:id="@+id/textViewCalRes"
                android:maxLines="1"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff9d9d9d"
            android:id="@+id/linearLayout10"
            android:layout_above="@+id/linearLayout5"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/linearLayout5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|start"
                android:text="Qté"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView12"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="15sp"
                android:layout_weight="1.30"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|start"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nom"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewNom"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="15sp"
                android:layout_weight="1.5"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|start"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Calories"
                android:id="@+id/textViewCal"
                android:maxLines="1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|start"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sucres"
                android:id="@+id/textView7"
                android:maxLines="1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="5dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|start"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gras"
                android:id="@+id/textView14"
                android:maxLines="1"
                android:textSize="15sp"
                android:layout_weight="0.98"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|start"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Protéines"
                android:id="@+id/textView15"
                android:maxLines="1"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="right"
            android:id="@+id/newLinear"
            android:layout_below="@+id/linearLayout10"
            android:layout_alignParentStart="true"
            android:background="@color/black"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_below="@+id/linearLayout10"
            android:layout_toEndOf="@+id/linearLayout5"
            android:background="@color/black"></LinearLayout>

    </RelativeLayout>

</RelativeLayout>
