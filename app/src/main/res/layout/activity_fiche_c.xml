<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.github.compto_bouffe.FicheC">

    <RelativeLayout
        tools:context="com.example.sr.fiche_b.MainActivity2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout5"
            android:minWidth="120dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Calories ingérées:"
                android:id="@+id/textView4"
                android:layout_marginTop="15dp"
                android:maxLines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/textViewCalIng"
                android:textStyle="bold"
                android:textSize="30sp"
                android:maxLines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Calories restantes:"
                android:id="@+id/textView5"
                android:maxLines="1"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:textStyle="bold"
                android:textSize="30sp"
                android:id="@+id/textViewCalRes"
                android:maxLines="1" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/linearLayout6"
            android:background="#ff9d9d9d"
            android:id="@+id/linearLayout10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Qté"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView12"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="15sp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nom"
                android:layout_marginTop="10dp"
                android:id="@+id/textViewNom"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="15sp"
                android:layout_weight="3"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Calories"
                android:id="@+id/textViewCal"
                android:maxLines="1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sucres"
                android:id="@+id/textView7"
                android:maxLines="1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gras"
                android:id="@+id/textView14"
                android:maxLines="1"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Protéines"
                android:id="@+id/textView15"
                android:maxLines="1"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp" />

        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_nutri"
            android:layout_toEndOf="@+id/linearLayout6"
            android:layout_below="@+id/linearLayout7"
            android:layout_alignBottom="@+id/linearLayout8" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toEndOf="@+id/linearLayout5"
            android:background="#ff000000"
            android:paddingRight="2dp"
            android:id="@+id/linearLayout6" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/linearLayout7"
            android:background="#ff000000"
            android:paddingBottom="2dp"
            android:layout_below="@+id/linearLayout10"
            android:layout_toEndOf="@+id/linearLayout5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/linearLayout8"
            android:background="#ff000000"
            android:paddingBottom="2dp"
            android:layout_alignTop="@+id/linearLayout9"
            android:layout_alignStart="@+id/linearLayout7" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout9"
            android:padding="10dp"
            android:layout_alignEnd="@+id/linearLayout8"
            android:layout_toEndOf="@+id/linearLayout6"
            android:weightSum="4"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MODIFIER MA LISTE"
                android:id="@+id/modify"
                android:layout_alignParentTop="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AJOUTER UN PLAT"
                android:id="@+id/add_plat"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
